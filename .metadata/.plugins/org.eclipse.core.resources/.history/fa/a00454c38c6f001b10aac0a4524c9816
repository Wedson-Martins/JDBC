package com.wcode.exemplo2_jdbc;

import java.sql.SQLException;
import java.util.Scanner;

public class App {
	public static void main(String[] args) throws SQLException {

		Scanner scanner = new Scanner(System.in);
		Integer choose = null;
		do {
			System.out.println("1 - Insere");
			System.out.println("2 - Buscar pelo ID");
			System.out.println("3 - Buscar todos");
			System.out.println("4 - Atualizar");
			System.out.println("5 - Deletar");
			System.out.println("");
			System.out.println("Escolha uma das Operações");
			choose = scanner.nextInt();

			switch (choose) {
			case 1:
				System.out.println("Insere");
				break;
			case 2:
				System.out.println("busca id");
				break;
			case 3:
				System.out.println("busca Todos");
				break;
			case 4:
				System.out.println("Atualiza");
				break;
			case 5:
				System.out.println("Deleta");
				break;
			case 6:
				System.out.println("Sair");
				break;
			}
		} while (choose != 6);

	}
}
