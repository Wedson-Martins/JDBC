package com.wcode.exemplo2_jdbc;

import java.sql.SQLException;
import java.util.List;
import java.util.Scanner;

import com.wcode.exemplo2_jdbc.conection.DAO;
import com.wcode.exemplo2_jdbc.model.Car;

public class App {
	public static void main(String[] args) throws SQLException {

		Scanner scanner = new Scanner(System.in);
		Integer choose = null;
		DAO dao = new DAO();

		do {
			System.out.println("1 - Insert");
			System.out.println("2 - Find by ID");
			System.out.println("3 - Find All");
			System.out.println("4 - Update");
			System.out.println("5 - Delete");
			System.out.println("6 - Exit");
			System.out.println("");
			System.out.println("Escolha uma das Operações");
			choose = scanner.nextInt();

			switch (choose) {
			case 1:
				System.out.println("Insert model");
				Car car = new Car(scanner.next());
				dao.insert(car);
				break;
			case 2:
				System.out.println("Insert ID");
				Car c = dao.findById(scanner.nextInt());
				System.out.println(c.toString());
				break;
			case 3:
				System.out.println("Find All");
				List<Car> cars = dao.findAll();
				for (Car c2 : cars) {
					System.err.println(c2.toString());
				}
				break;
			case 4:
				Car c3 = new Car();
				System.out.println("Insert id");
				c3.setId(scanner.nextInt());
				System.out.println("Insert Model");
				c3.setModel(scanner.next());
				dao.update(c3);
				break;
			case 5:
				System.out.println("Delete");
				break;
			case 6:
				System.out.println("Exit");
				break;
			}
		} while (choose != 6);

	}
}
